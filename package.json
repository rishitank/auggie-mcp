{
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix"
    ]
  },
  "name": "auggie-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.5.0"
  },
  "scripts": {
    "dev": "ts-node --esm src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint src scripts --ext .ts,.js,.mjs",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "prepare": "husky",
    "format": "prettier --write .",
    "prepare": "husky install",
    "smoke": "node scripts/smoke.mjs",
    "test": "node scripts/test.mjs && node scripts/stream-test.mjs && node scripts/stream-test-negative-exec.mjs && node scripts/search-read-tests.mjs",
    "stream:client": "node scripts/stream-client.mjs"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3"
  }
}
